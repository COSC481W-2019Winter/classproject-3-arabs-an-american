@model SignUpViewModel
@{
    ViewData["Title"] = "RegisterAccount";
}

<h1>RegisterAccount</h1>

<form asp-action="RegisterAccount" asp-controller="Accounts" method="post">

    <label asp-for="Username">Username</label>
    <input asp-for="Username" />
    <span asp-validation-for="Username" class="text-danger"></span>
    <br />
    <label asp-for="Password">Password</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password" class="text-danger"></span>
    <br />
    <label asp-for="Email">Email</label>
    <input asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    <label asp-for="Address.StreetNumber">StreetNumber</label>
    <input asp-for="Address.StreetNumber" />
    <span asp-validation-for="Address.StreetNumber" text-danger"></span>
    <br />
    <label asp-for="Address.StreetName">StreetName</label>
    <input asp-for="Address.StreetName" />
    <span asp-validation-for="Address.StreetName" class="text-danger"></span>
    <br />
    <label asp-for="Address.City">City</label>
    <input asp-for="Address.City" />
    <span asp-validation-for="Address.City" class="text-danger"></span>
    <br />
    <label asp-for="Address.State">State</label>
    <input asp-for="Address.State" />
    <span asp-validation-for="Address.State" class="text-danger"></span>
    <br />
    <label asp-for="Address.ZipCode">ZipCode</label>
    <input asp-for="Address.ZipCode" />
    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
    <br />
    <label asp-for="PhoneNumber">PhoneNumber</label>
    <input asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    <br />

    <input type="submit" value="Signup" />
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
