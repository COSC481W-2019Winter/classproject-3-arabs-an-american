@model CreateRequestViewModel

<h1>Create Request</h1>

<!--<form asp-action="RegisterRequest" asp-controller="Request" method="post">-->
<form method="post" action="@Url.Action("Create","Request")">
    @Html.HiddenFor(m => m.Id)
    <table>
        <tr><th><h3>Pickup</h3></th></tr>
        <tr>
            <td>Street Number</td>
            <td colspan="2">Street Name</td>
        </tr>
        <tr>
            <td>
              @Html.TextBoxFor(m => m.PickupStreetNumber, "Street Number", new { @class = "form-control" })
              <span asp-validation-for="PickupStreetNumber" class="text-danger"></span>
            </td>

            <td colspan="2">
                @Html.TextBoxFor(m => m.PickupStreetName, new { @class = "form-control" })
                <span asp-validation-for="PickupStreetName" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>City</td>
            <td>State</td>
            <td>Zipcode</td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(m => m.PickupCity, new { @class = "form-control" })
                <span asp-validation-for="PickupCity" class="text-danger"></span>
            </td>
            <td>
                @Html.TextBoxFor(m => m.PickupState, new { @class = "form-control" })
                <span asp-validation-for="PickupState" class="text-danger"></span>
                </td>
            <td>
                @Html.TextBoxFor(m => m.PickupZipcode, new { @class = "form-control" })
                <span asp-validation-for="PickupZipcode" class="text-danger"></span>

            </td>
        </tr>
        <tr>
            <td>Instructions</td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.TextBoxFor(m => m.PickupInstructions, new { @class = "form-control" })
                <span asp-validation-for="PickupInstructions" class="text-danger"></span>
            </td>
        </tr>
        <tr><th><h3>Dropoff</h3></th></tr>
        <tr>
            <td>Street Number</td>
            <td colspan="2">Street Name</td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(m => m.DropoffStreetNumber, new { @class = "form-control" })
                <span asp-validation-for="DropoffStreetNumber" class="text-danger"></span>
            </td>
            <td colspan="2">@Html.TextBoxFor(m => m.DropoffStreetName, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>City</td>
            <td>State</td>
            <td>Zipcode</td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(m => m.DropoffCity, new { @class = "form-control" })
                <span asp-validation-for="DropoffCity" class="text-danger"></span>
            </td>
            <td>
                @Html.TextBoxFor(m => m.DropoffState, new { @class = "form-control" })
                <span asp-validation-for="DropoffState" class="text-danger"></span>
            </td>
            <td>
                @Html.TextBoxFor(m => m.DropoffZipcode, new { @class = "form-control" })
                <span asp-validation-for="DropoffZipcode" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>Instructions</td>
        </tr>
        <tr>
            <td colspan="3">@Html.TextBoxFor(m => m.DropoffInstructions, new { @class = "form-control" })</td>
        </tr>
        <tr><th><h3>Item</h3></th></tr>
        <tr>
            <td>Item</td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.TextBoxFor(m => m.Item, new { @class = "form-control" })
                <span asp-validation-for="Item" class="text-danger"></span>
        </td>
        </tr>
    </table>
    <input type="submit" value="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
